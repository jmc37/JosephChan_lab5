<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context=".ArenaFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/vs_fragmentArena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:text="@string/VS"
        android:textSize="34sp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerViewFighterOne"
        android:name="com.example.josephchan_lab5.FighterFragment"
        android:layout_width="356dp"
        android:layout_height="274dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        tools:layout="@layout/fragment_fighter" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerViewFighterTwo"
        android:name="com.example.josephchan_lab5.FighterFragment"
        android:layout_width="371dp"
        android:layout_height="266dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="110dp"
        tools:layout="@layout/fragment_fighter" />

    <Button
        android:id="@+id/home_fragmentArena_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:text="@string/Home"
        android:textSize="20sp" />

    <Button
        android:id="@+id/nextbattle_fragmentArena_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="10dp"
        android:text="@string/nextBattle"
        android:textSize="24sp" />

</FrameLayout>